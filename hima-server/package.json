{
  "name": "hima-server",
  "version": "1.0.0",
  "description": "Himer server",
  "type": "module",
  "main": "app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/app.js",
    "dev": "nodemon --exec tsx src/app.ts",
    "build": "pnpm run compile && tsc",
    "compile": "hardhat compile --config hardhat.config.js",
    "deploy:testnet": "pnpm exec hardhat run scripts/deploy.ts --network mantleTestnet --config hardhat.config.js",
    "deploy:mainnet": "pnpm exec hardhat run scripts/deploy.ts --network mantleMainnet --config hardhat.config.js"
  },
  "author": "Anwar Magara",
  "license": "MIT",
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@open-wa/wa-automate": "^4.66.1",
    "@openzeppelin/contracts": "^5.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.13.2",
    "chai": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "express": "^5.1.0",
    "hardhat": "^2.22.0",
    "jsonwebtoken": "^9.0.3",
    "mocha": "^11.7.5",
    "mongoose": "^9.0.1",
    "tsx": "^4.21.0",
    "twilio": "^5.11.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "viem": "^2.41.2",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}